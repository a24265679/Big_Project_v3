@model IEnumerable<Big_Project_v3.Models.RestaurantUser>

@{
	ViewData["Title"] = "UserManagement";
}

<h1>用戶管理</h1>
<hr />

<p>
	<a asp-action="CreateUM" class="btn btn-primary">新增管理人員</a>
</p>
<table class="table table-striped" style="vertical-align: middle;">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.ManagerPosition)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.ManagerId)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.MobileNumber)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Email)
			</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.ManagerPosition)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.ManagerId)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.MobileNumber)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Email)
				</td>
				<td>
					@if (item.ManagerPosition != "店長")
					{
					<a asp-action="EditUM" asp-route-id="@item.RestaurantUserId" class="btn btn-primary me-2">編輯</a>
					<a asp-action="DeleteUM" asp-route-id="@item.RestaurantUserId" class="btn btn-danger">刪除</a>
					}
				</td>
			</tr>
		}
	</tbody>
</table>