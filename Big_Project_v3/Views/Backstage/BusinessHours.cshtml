@model Big_Project_v3.Models.Restaurant

@{
    ViewData["Title"] = "BusinessHours";
}

<h1>營業時間</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="BusinessHours">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="RestaurantId" />
            
            <div class="form-group mb-3">
                <label asp-for="BusinessHoursStart" class="control-label">開始營業時間:</label>
                <input asp-for="BusinessHoursStart" type="time" class="form-control" />
                <span asp-validation-for="BusinessHoursStart" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="BusinessHoursEnd" class="control-label">結束營業時間:</label>
                <input asp-for="BusinessHoursEnd" type="time" class="form-control" />
                <span asp-validation-for="BusinessHoursEnd" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="LastCheckInTime" class="control-label">最後訂位時間:</label>
                <input asp-for="LastCheckInTime" type="time" class="form-control" />
                <span asp-validation-for="LastCheckInTime" class="text-danger"></span>
            </div>
            @* 不加 type="button" 的話 button 會預設為 type="submit" *@
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#confirmModal">儲存</button>
        
            <!-- The Modal 寫在表單裡面 type="submit" 才有效果-->
            <div class="modal fade" id="confirmModal">
                <div class="modal-dialog modal-sm">
                    <div class="modal-content">
                        <!-- Modal Header -->
                        <div class="modal-header">
                            <h4 class="modal-title">是否更改營業時間</h4>
                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                        </div>

                        <!-- Modal body -->
                        <div class="modal-body">
                            點擊確認後將更改營業時間
                        </div>

                        <!-- Modal footer -->
                        <div class="modal-footer">
                            <button type="button" class="btn btn-danger" data-bs-dismiss="modal">取消</button>
                            @* 如果Modal沒有寫在表單裡面，<input type="submit" />會沒有效果 *@
                            <input type="submit" value="確認" class="btn btn-primary" />
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>


