@model IEnumerable<Big_Project_v3.ViewModels.ReservationViewModel>

<div class="container mt-4">
    <h4>近期訂位</h4>
    <div class="row">
        @foreach (var reservation in Model)
        {
            <div class="col-md-12 mb-3">
                <!-- 卡片樣式 -->
                <div class="card shadow-sm">
                    <div class="card-body">
                        <!-- 餐廳圖片 -->
                        <div class="row">
                            <div class="col-md-3">
                                <img src="https://via.placeholder.com/150" alt="餐廳圖片" class="img-fluid rounded">
                            </div>
                            <div class="col-md-9">
                                <!-- 訂位資訊 -->
                                <h5 class="card-title">@reservation.Name</h5>
                                @if (reservation.ReservationStatus == "已確認")
                                {
                                    <p class="text-success fw-bold">✔ @reservation.ReservationStatus 訂位</p>
                                }else
                                {
                                    <p class="text-danger fw-bold">✘ @reservation.ReservationStatus 訂位</p>
                                }
                                <p class="mb-1">
                                    <i class="fas fa-user"></i> 成人人數：@reservation.NumAdults<br />
                                    <i class="fas fa-child"></i> 兒童人數：@reservation.NumChildren<br />
                                    <i class="bi bi-calendar-event"></i> 日期：@reservation.ReservationDate.ToString("yyyy/MM/dd")<br />
                                    <i class="bi bi-clock"></i> 時間：@reservation.ReservationTime.ToString(@"hh\:mm")
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
