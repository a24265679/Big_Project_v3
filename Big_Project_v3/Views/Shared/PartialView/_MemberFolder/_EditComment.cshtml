@model Big_Project_v3.ViewModels.EditReviewViewModel

<form id="addCommentForm">
    <!-- 隱藏的 ReviewID 和 RestaurantID 欄位 -->
    <input type="hidden" id="reviewId" name="ReviewID" value="@Model.ReviewID" />
    <input type="hidden" id="restaurantId" name="RestaurantID" value="@Model.RestaurantID" />

    <div class="mb-3 d-flex align-items-center">
        <label for="rating" class="me-2">評分：</label>
        @await Html.PartialAsync("PartialView/_MemberFolder/StarRatingInput", Model.Rating)
    </div>

    <div class="mb-3">
        <label for="reviewText">留言：</label>
        <textarea id="reviewText" name="ReviewText" class="form-control" rows="3" required>@Model.ReviewText</textarea>
    </div>
    <button type="button" class="btn btn-success" id="submitCommentBtn">更新評論</button>
</form>
