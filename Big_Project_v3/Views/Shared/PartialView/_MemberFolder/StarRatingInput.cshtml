@model double

<style>
    .star-rating-container {
        display: flex;
        justify-content: flex-start; /* 確保星星容器靠左對齊 */
    }

    .star-rating {
        direction: rtl; /* 保持星星從右到左排列 */
        display: inline-flex; /* 使用 inline-flex 讓其保持水平排列且容器可調整位置 */
        font-size: 0;
    }

        .star-rating input[type="radio"] {
            display: none;
        }

    .star-label {
        cursor: pointer;
        width: 40px; /* 增加寬度來擴大點擊區域 */
        height: 30px; /* 保證星星的點擊區域充足 */
        margin-right: 5px; /* 星星之間稍微增加一些間距 */
        position: relative;
    }


        .star-rating svg {
            width: 100%;
            height: 100%;
            fill: #80868b; /* 空心星的顏色 */
            transition: fill 0.2s;
        }

        /* 當前選中及其右側的星星變亮 */
        .star-rating label:hover ~ label svg,
        .star-rating input[type="radio"]:checked ~ label svg {
            fill: #fabb05; /* 亮星的顏色 */
        }

</style>

<div class="star-rating" aria-label="評分星等" role="radiogroup">
    @for (var i = 1; i <= 5; i++)
    {
        <input type="radio" id="star-@i" name="Rating" value="@i" @(Model == i ? "checked" : "") aria-label="@i 星" />
        <label for="star-@i" tabindex="0" class="star-label">
            <svg viewBox="0 0 40 40" class="bi bi-star-fill text-warning">
                <path d="M20 0 L24 14 H38 L27 23 L31 37 L20 28 L9 37 L13 23 L2 14 H16 L20 0 Z" />
            </svg>
        </label>
    }
</div>



