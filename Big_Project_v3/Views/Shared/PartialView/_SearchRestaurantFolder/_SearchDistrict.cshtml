@model IEnumerable<Big_Project_v3.Models.Restaurant>
<div id="" class="bg-white p-3 rounded">
    <div id="">
        @foreach (var restaurant in Model)
        {
            <a href="@Url.Action("Index", "Restaurant", new { id = restaurant.RestaurantId })" class="text-decoration-none text-dark">
            <div class="restaurant-item d-flex mb-3">
                <!-- 使用 Flexbox 讓內容水平排列 -->
                <img src="~/img/輕井澤-封面.jpg" alt="Restaurant Image" class="img-thumbnail me-3" style="width: 200px; height: 200px;">
                <div>
                    <h3 class="fw-bolder text-primary">@restaurant.Name</h3>

                    <!-- 判斷餐廳是否接受訂單 -->
                    @if (!restaurant.IsReservationOpen) // 判斷 IsReservationOpen 是否為 false
                    {
                        <h5 class="fw-bolder text-danger">此餐廳暫時無法接受訂單。</h5>
                    }

                    <!-- 星級 Bootstrap 樣式 -->
@*                     @await Html.PartialAsync("PartialView/_SearchRestaurantFolder/StarRating_BootStrap", restaurant.AverageRating)
                    <p>@restaurant.Description</p>
                    <br /> *@
                    <!-- 星級 CSS 樣式 -->
                    @await Html.PartialAsync("PartialView/_SearchRestaurantFolder/StarRating_CSS", restaurant.AverageRating)
                    <br />
                    <p>@restaurant.Description</p>
                    <p>$$$ - @restaurant.Address</p>

                    @* <p>距離: @restaurant.Distance.ToString("F2") 公里</p> *@
                    @* <button class="btn btn-danger">下午7:00</button> *@
                </div>
            </div>
            <hr />
          </a>
        }
    </div>
</div>