@model IEnumerable<Big_Project_v3.ViewModels.LocationViewModel>
<div id="" class="bg-white p-3 rounded">
    <div id="">
        @foreach (var restaurant in Model)
        {
            <a href="@Url.Action("Index", "Restaurant", new { id = restaurant.Id })" class="text-decoration-none text-dark">
                <div class="restaurant-item d-flex mb-3">
                    <!-- 使用 Flexbox 讓內容水平排列 -->
                    <img src="~/img/輕井澤-封面.jpg" alt="Restaurant Image" class="img-thumbnail me-3" style="width: 120px; height: 80px;">
                    <div>
                        <h6 class="text-primary">@restaurant.Name</h6>

                        <!-- 判斷餐廳是否接受訂單 -->
                        @if (!restaurant.IsReservationOpen)
                        {
                            <p class="text-danger">此餐廳暫時無法接受訂單。</p>
                        }

                        <!-- 星級 Bootstrap 樣式 -->
                        @await Html.PartialAsync("PartialView/_SearchRestaurantFolder/StarRating_BootStrap", restaurant.AverageRating)
                        <p>@restaurant.Description</p>
                        <br />
                        <!-- 星級 CSS 樣式 -->
                        @await Html.PartialAsync("PartialView/_SearchRestaurantFolder/StarRating_CSS", restaurant.AverageRating)
                        <br />
                        <p>@restaurant.Description</p>
                        <p>$$$ - @restaurant.Address</p>
                    </div>
                </div>
                <hr />
            </a>
        }
    </div>
</div>

<style>
    /* 移除連結的預設樣式，確保外觀一致 */
    a.text-decoration-none {
        color: inherit;
    }

        a.text-decoration-none:hover {
            text-decoration: none;
        }
</style>
