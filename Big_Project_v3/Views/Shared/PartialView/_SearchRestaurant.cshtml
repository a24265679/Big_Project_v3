@model Big_Project_v3.ViewModels.SearchRestaurantViewModel

<style>
    /* 星星容器樣式 */
    .star-rating {
        font-size: 1.5rem;
        color: #d3d3d3; /* 灰色作為空星顏色 */
        position: relative;
        display: inline-block;
        overflow: hidden;
        white-space: nowrap;
    }

    /* 覆蓋的滿星樣式 */
    .star-rating-fill {
        color: #FFD700; /* 金黃色作為滿星顏色 */
        position: absolute;
        top: 0;
        left: 0;
        width: 0; /* 初始寬度設為 0，通過 style 動態設定 */
        overflow: hidden;
    }

        /* 星星圖案 */
        .star-rating::before,
        .star-rating-fill::before {
            content: "★★★★★"; /* 使用五顆星作為基底 */
        }
</style>

<div id="" class="bg-white p-3 rounded">
    <!-- bg-white: 設定背景顏色為白色
         p-3: 設定四周的內距為 3
         rounded: 設置圓角邊框 -->
    @* 顯示餐廳列表 *@
    @* <h5 class="text-dark">餐廳列表</h5> *@
    <!-- text-dark: 設定文字顏色為深色 -->
    <!-- 確認篩選結果 -->
    @* <p>篩選後的餐廳數量: @Model.Restaurants.Count()</p> *@

